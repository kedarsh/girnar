<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Serving style</th>
      <th>Base</th>
      <th>Flavour</th>
      <th>Second Flavour</th>
      <th>Packaging</th>
      <th>Label</th>
      <th>Blend name</th>
      <th>Message</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user %></td>
        <td><%= order.serving_style %></td>
        <td><%= order.tea_base %></td>
        <td><%= order.flavour %></td>
        <td><%= order.second_flavour_id %></td>
        <td><%= order.packaging %></td>
        <td><%= order.label %></td>
        <td><%= order.blend_name %></td>
        <td><%= order.message %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
