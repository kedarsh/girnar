<h1>Listing serving_styles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @serving_styles.each do |serving_style| %>
      <tr>
        <td><%= serving_style.name %></td>
        <td><%= serving_style.description %></td>
        <td><%= link_to 'Show', serving_style %></td>
        <td><%= link_to 'Edit', edit_serving_style_path(serving_style) %></td>
        <td><%= link_to 'Destroy', serving_style, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Serving style', new_serving_style_path %>
